static void MCP3424Task(void *parameters)
{
	//uint8_t gain = 8;
	uint8_t resolution = 18;

	uint8_t PGAgain = 3;
//	switch(gain) {
//	case(8):
//			PGAgain = 3;
//	case(4):
//			PGAgain = 2;
//	case(2):
//			PGAgain = 1;
//	case(1):
//			PGAgain = 0;
//	}

	uint8_t SampleRate = 3;
//	switch(resolution) {
//	case(18):
//			SampleRate = 3; //0 = 240 SPS, 3 = 3.75 sps (18 bits)
//	case(16):
//			SampleRate = 2;
//	case(14):
//			SampleRate = 1;
//	case(12):
//			SampleRate = 0;
//	}

	uint8_t ConversionModeBit = 1; //Continuous
	uint8_t ChannelBits = 0; //0 = Channel 1
	uint8_t config = PGAgain | (SampleRate << 2) | (ConversionModeBit << 4) | (ChannelBits << 6);

	bool bParamSet = false;

	if(SetParametersMCP3424(&config))
		bParamSet = true;

	/*
	 * MCP9804 will send data when address byte is received in READ mode
	 *
	 */
	uint8_t buf[4] = {0};

	portTickType lastSysTime;

	mcp3424sensorData d1;

	double_t channel1 = 0;
	uint32_t chanOneRaw = 0;
	uint8_t data1, data2, data3 = 0;
	double_t refVoltage = 2.048;
	double_t vPerC = 0.00004; //volts per celcius for K-type thermocouple
	double_t LSB = 2 * refVoltage / (1 << resolution);


	// Main task loop
	lastSysTime = xTaskGetTickCount();
	while(1) {

		bool b = Read_Hot_Junction_Temp(buf);
		if(b) {
			PIOS_LED_On(LED2);

			//Assume K-type thermocouple is connected to channel 1
			buf[0] = buf[0] & 4; //ignore the first 6 bits
			data1 = buf[0];
			data2 = buf[1];
			data3 = buf[2];
			chanOneRaw = (int)((data1 << 16) | (data2 << 8) | data3);

			//do conversion here
			//Type K should measure temp from 0 to 1250 Celcius
			//Full scale range is about 50mV. Hence, measurement resolution should be 40uV/C (50/1250)

			//LSB = 0;
			//vPerC = 0;

			//channel1 = chanOneRaw * LSB;
			//vPerC = 0;
			channel1 = chanOneRaw * LSB / vPerC;
			//channel1 = chanOneRaw;

			d1.buf0 = buf[0]; //data1
			d1.buf1 = buf[1]; //data2
			d1.buf2 = buf[2]; //data3
			d1.buf3 = chanOneRaw;
			d1.buf4 = channel1; //calculated temperature
			d1.buf5 = buf[3]; //config register
			d1.buf6 = 0;
		}
		else {
			PIOS_LED_Off(LED2);
			d1.buf0 = 99;
			d1.buf1 = 99;
			d1.buf2 = 99;
			d1.buf6 = 111;

			//configuration may be wrong so set flag to set parameters again
			bParamSet = false;
		}

		mcp3424sensorSet(&d1);

		// Delay until it is time to read the next sample
		vTaskDelayUntil(&lastSysTime, UPDATE_PERIOD / portTICK_RATE_MS);
	}

	Read_Hot_Junction_Temp(buf);
	Read_Cold_Junction_Temp(buf);

}

