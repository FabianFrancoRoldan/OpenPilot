/**
 * Module thread, should not return.
 */
static void MCP3424Task(void *parameters)
{

	SetParametersMCP3424();


	/*
	 * MCP9804 will send data when address byte is received in READ mode
	 *
	 */
	uint8_t buf[3] = {0};
	bool ok = false;

	portTickType lastSysTime;

	mcp3424sensorData d1;


	while(1) {

		PIOS_LED_Off(LED2);

		bool b = Read_Hot_Junction_Temp(buf);
		if(b) {
			PIOS_LED_On(LED2);
			d1.buf0 = buf[0];
			d1.buf1 = buf[1];
			d1.buf2 = buf[2];
		}
		else {
			d1.buf0 = 99;
			d1.buf1 = 99;
			d1.buf2 = 99;
		}

//		mcp3424sensorData data;
//		data.Address = 0.0;
//		data.Cmd = 0.0;
//		data.buf0 = 0.0;//5.0;
//		data.buf1 = 0.0;
//		data.buf2 = 0.0;
//		data.buf3 = 0.0;
//		data.buf4 = 0.0;
//		data.buf5 = 250.0;
//		data.buf6 = 250.0;
//		data.buf7 = 250.0;
//		data.buf8 = 250.0;
//		data.buf9 = 250.0;
		mcp3424sensorSet(&d1);

		// Delay until it is time to read the next sample
		vTaskDelayUntil(&lastSysTime, UPDATE_PERIOD / portTICK_RATE_MS);
	}




	mcp3424sensorData data;
	data.Address = 0;
	data.Cmd = 0;
	data.buf0 = 0;//5.0;
	data.buf1 = 0;
	data.buf2 = 0;
	data.buf3 = 0;
	data.buf4 = 0;
	data.buf5 = 250;
	data.buf6 = 250;
	data.buf7 = 250;
	data.buf8 = 250;
	data.buf9 = 250;
	mcp3424sensorSet(&data);

	//PIOS_BMP085_Init();

	// Main task loop
	lastSysTime = xTaskGetTickCount();

	uint8_t n = 0;
	while (1)
	{
		PIOS_LED_Off(LED1);
		PIOS_LED_Off(LED2);

		n++;
		// Update the temperature data
		//PIOS_BMP085_StartADC(TemperatureConv);
		//xSemaphoreTake(PIOS_BMP085_EOC, portMAX_DELAY);

		data.Address = MCP3424_I2C_ADDRESS;//5.0;
		data.Cmd = n;
		mcp3424sensorSet(&data);

		//ok = Read_Hot_Junction_Temp(buf);
		if(ok) {
			data.buf0 = buf[0];
			data.buf1 = buf[1];
			data.buf5 = 99;
			mcp3424sensorSet(&data);

			PIOS_LED_Off(LED1);
			PIOS_LED_Off(LED2);

		}
		else {
			data.buf5 = 200;
			mcp3424sensorSet(&data);
		}


		// Delay until it is time to read the next sample
		vTaskDelayUntil(&lastSysTime, UPDATE_PERIOD / portTICK_RATE_MS);
	}

	Read_Hot_Junction_Temp(buf);
	Read_Cold_Junction_Temp(buf);

}

